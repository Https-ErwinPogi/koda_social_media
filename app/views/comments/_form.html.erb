<%= form_with model: comment, url: path, data: { turbo: false } do |form| %>
  <div class="form-group">
    <%= form.label 'Write new comment', class: "text-black" %>
    <% invalid = comment.errors.include?(:content) %>
    <%= form.text_field :content, class: "form-control #{'is-invalid' if invalid}", placeholder: "New Comment" %>
    <% if invalid %>
      <small class="invalid-feedback d-block">
        <% comment.errors.full_messages_for(:content).each do |error_message| %>
          <%= error_message %>.
        <% end %>
      </small>
    <% end %>
  </div>
  <%= form.submit class: "btn btn-success mt-4" %>
<% end %>