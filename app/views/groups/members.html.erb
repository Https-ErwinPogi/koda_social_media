<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card bg-dark flex-grow-1" style="max-width: 40rem">
      <div class="card-header text-center"><h2>Member List</h2></div>
      <% @join_groups.each do |joined| %>
        <div class="card-body p-3">
          <div class="d-flex gap-2">
            <%= image_tag 'erwin.jpeg', height: 60, width: 60, class: "rounded-circle" %>
            <div class="flex-column ">
              <span class="d-block"><%= joined.user.username %></span>
              <span class="d-block"><%= joined.role.humanize if joined.role == "admin" %></span>
              <small class="text-muted">Joined date: <%= joined.created_at.strftime('%B %d, %Y') %></small>
            </div>
            <div class="dropdown">
              <button type="button" data-bs-toggle="dropdown" aria-expanded="false" class="btn btn-dark" style="border: 0; background-color: #666666; opacity: 40%; color: white">
                <i class="bi bi-three-dots text-white"></i>
              </button>
              <ul class="dropdown-menu">
                <li><%= button_to "Add as admin", '#', method: :delete, data: { turbo_confirm: "Are you sure you want to add #{joined.user.username} as admin?" }, class: "dropdown-item" %></li>
                <li><%= button_to "Add as moderator", '#', method: :delete, data: { turbo_confirm: "Are you sure you want to add #{joined.user.username} as moderator?" }, class: "dropdown-item" %></li>
                <li><%= button_to "Remove member", '#', method: :delete, data: { turbo_confirm: "Are you sure you want to remove #{joined.user.username} as member?" }, class: "dropdown-item" %></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>