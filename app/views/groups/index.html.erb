<div class="container">
  <div class="mb-3 text-end">
    <%= link_to 'Create new group', new_group_path, class: "btn btn-primary bi bi-plus-lg text-primary", style: "background-color: rgba(45,136,255, 0.2); border: 0" %>
  </div>
  <% @groups.each do |group| %>
    <div class="card bg-dark mb-3">
      <div class="card-body">
        <div class="d-flex flex-row">
          <div class=""><%= image_tag group.banner.url, height: 70, width: 70, class: "rounded" if group.banner? %>
          </div>
          <div class="flex-column">
            <p><%= group.name %></p>
            <p><%= group.description %></p>
            <p><%= group.privacy.humanize %></p>
          </div>
        </div>
        <div class="d-flex flex-row gap-2">
          <div class="flex-grow-1">
            <%= link_to 'View Group', group_path(group), class: "btn btn-primary text-primary w-100", style: "background-color: rgba(45,136,255, 0.2); border: 0" %>
          </div>
          <% if policy(group).edit? && policy(group).destroy? %>
            <div class="dropdown ">
              <button type="button" data-bs-toggle="dropdown" aria-expanded="false" class="btn btn-secondary" style="border: 0">
                <i class="bi bi-three-dots text-white"></i>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit", edit_group_path(group), class: "dropdown-item bi bi-pencil" %></li>
                <li><%= button_to "Delete", group_path(group), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "dropdown-item bi bi-trash3" %></li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>